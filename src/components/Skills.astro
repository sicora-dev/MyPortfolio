---
const { skills } = Astro.props;
---

<div class="flex gap-2 flex-wrap">
  {
    Object.entries(skills).map(([tech, icon]) => (
      <div class="w-fit flex-col animate-shine cursor-default inline-flex items-center justify-center rounded-md border border-neutral-300 dark:border-neutral-800 bg-[linear-gradient(100deg,#f5f5f5,45%,#d4d4d4,55%,#f5f5f5)] dark:bg-[linear-gradient(100deg,#171717,45%,#262626,55%,#171717)] bg-[length:200%_100%] px-2 py-0.5 text-[10px] font-medium text-neutral-700 dark:text-neutral-300 transition-colors">
        <img
          src={`/skills/${icon}.svg`}
          alt={tech}
          class="w-6 h-6 m-2"
          
        />
        <p>{tech}</p>
      </div>
    ))
  }
</div>

<style>
    @keyframes shine {
      0% {
        background-position: 200% 0%;
      }
      100% {
        background-position: 0% 0%;
      }
    }
    
    .animate-shine {
      animation: shine 5s linear infinite;
    }
</style>
